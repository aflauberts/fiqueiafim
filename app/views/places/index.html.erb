<% title "Places" %>

<table border="1">
  <tr>
    <th>Description</th>
    <th>Place Type</th>
    <th>District</th>
  </tr>
  <% for place in @places %>
    <tr>
      <td><%=h place.description %></td>
      <td>
        <% for category in place.categories %>
          <%=h category.description %> <br />
        <% end %>
      </td>
      <td><%=h place.city.name %></td>
      <td><%= link_to "Show", place %></td>
      <td><%= link_to "Edit", edit_place_path(place) %></td>
      <td><%= link_to "Destroy", place, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Place", new_place_path %></p>
