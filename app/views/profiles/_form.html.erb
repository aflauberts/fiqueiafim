<p>
  <label>First Name:</label>
  <%= f.text_field :first_name, :size => 20 %>
  <label>Visible?</label>
  <%= check_box_tag 'visible_fields[]', "first_name", @profile.visible_fields ? @profile.visible_fields.include?("first_name") : "false"  %>
</p>

<p>
  <label>Last Name:</label>
  <%= f.text_field :last_name, :size => 20 %>
  <label>Visible?</label>
  <%= check_box_tag 'visible_fields[]', "last_name", @profile.visible_fields ? @profile.visible_fields.include?("last_name") : "false"%>
</p>

<p>
  <label>Sex:</label>
  <%= f.select :sex, [['Male','M'], ['Female','F']] %>
</p>

<p>
  <label>Sexual Orientation:</label>
  <%= f.select :orientation, [['Heterosexual','H'], ['Homosexual','G'],['Bisexual','B']] %>
  <%= check_box_tag 'visible_fields[]', "orientation", @profile.visible_fields ? @profile.visible_fields.include?("orientation") : "false" %>
</p>


<%= submit_tag 'Vai'  %>

